doctype html

html(lang="en")

  head
    if name
      title= `${title}: ${name}`
    else
      title= title

    meta(charset="utf-8")
    link(rel="stylesheet", href="/main.css")

    block links
    block scripts

  body
    block body

    header
      if name
        h1= name
      else
        h1= title

    nav
      block nav

    main#main
      block main
